<style>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    .portfolio-container {
        width: 100%;
        min-height: 100vh;
        background: #000;
        color: #fff;
        overflow-x: hidden;
    }

    /* Hero Section - Split Design */
    .hero-section {
        display: flex;
        min-height: 100vh;
        position: relative;
    }

    .hero-left {
        flex: 2;
        background: linear-gradient(135deg, #d4a574 0%, #8b7355 50%, #5a4a3a 100%);
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 4rem;
        position: relative;
        overflow: hidden;
    }

        .hero-left::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: radial-gradient(circle at 20% 50%, rgba(255,255,255,0.1) 0%, transparent 50%), radial-gradient(circle at 80% 80%, rgba(255,255,255,0.1) 0%, transparent 50%);
            pointer-events: none;
        }

    .hero-content {
        max-width: 600px;
        position: relative;
        z-index: 1;
    }

    .hero-title {
        font-size: 5.5rem;
        font-weight: 900;
        line-height: 1.1;
        color: #1a1a1a;
        text-shadow: 3px 3px 0px rgba(255,255,255,0.3), -1px -1px 0px rgba(0,0,0,0.2);
        margin-bottom: 3rem;
        letter-spacing: -3px;
        animation: fadeInUp 1s ease-out;
    }

    .hero-cta {
        margin-top: 3rem;
        animation: fadeInUp 1.2s ease-out;
    }

    .cta-question {
        font-size: 1.8rem;
        font-weight: 700;
        color: #1a1a1a;
        margin-bottom: 0.5rem;
        text-transform: uppercase;
        letter-spacing: 3px;
    }

    .cta-subtitle {
        font-size: 1.2rem;
        color: #1a1a1a;
        margin-bottom: 2rem;
        opacity: 0.9;
    }

    .cta-button {
        padding: 1.4rem 3rem;
        font-size: 1.1rem;
        font-weight: 700;
        text-transform: uppercase;
        letter-spacing: 2px;
        border: 3px solid #1a1a1a;
        background: transparent;
        color: #1a1a1a;
        transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
        box-shadow: 0 4px 15px rgba(0,0,0,0.2);
    }

        .cta-button:hover {
            background: #1a1a1a;
            color: #d4a574;
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(0,0,0,0.3);
        }

    .hero-right {
        flex: 1;
        background: linear-gradient(135deg, #0a0a0a 0%, #1a1a1a 100%);
        display: flex;
        align-items: center;
        justify-content: center;
        position: relative;
        overflow: hidden;
    }

    .hero-image-container {
        width: 100%;
        height: 100%;
        position: relative;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .hero-graphic {
        width: 400px;
        height: 400px;
        position: relative;
        animation: rotate 20s linear infinite;
    }

    .graphic-circle {
        width: 100%;
        height: 100%;
        border: 3px solid #d4a574;
        border-radius: 50%;
        position: absolute;
        top: 0;
        left: 0;
    }

        .graphic-circle::before {
            content: '';
            position: absolute;
            top: -10px;
            left: 50%;
            transform: translateX(-50%);
            width: 20px;
            height: 20px;
            background: #d4a574;
            border-radius: 50%;
            box-shadow: 0 0 20px #d4a574;
        }

    .graphic-pattern {
        width: 80%;
        height: 80%;
        border: 2px solid rgba(212, 165, 116, 0.5);
        border-radius: 50%;
        position: absolute;
        top: 10%;
        left: 10%;
        animation: rotate 15s linear infinite reverse;
    }

    @@keyframes rotate {
        from {
            transform: rotate(0deg);
        }

        to {
            transform: rotate(360deg);
        }
    }

    @@keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(30px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    /* Navigation */
    .top-nav {
        position: fixed;
        top: 0;
        right: 0;
        z-index: 1000;
        padding: 1.5rem 2rem;
        display: flex;
        gap: 2rem;
        align-items: center;
        background: rgba(0, 0, 0, 0.8);
        backdrop-filter: blur(10px);
        border-bottom-left-radius: 20px;
    }

    .nav-links {
        display: flex;
        gap: 2rem;
    }

    .nav-link {
        color: #d4a574;
        text-decoration: none;
        font-weight: 600;
        font-size: 0.95rem;
        text-transform: uppercase;
        letter-spacing: 2px;
        transition: all 0.3s;
        padding: 0.5rem 1rem;
        border-radius: 4px;
        position: relative;
    }

        .nav-link::after {
            content: '';
            position: absolute;
            bottom: 0;
            left: 50%;
            transform: translateX(-50%);
            width: 0;
            height: 2px;
            background: #d4a574;
            transition: width 0.3s;
        }

        .nav-link:hover {
            color: #fff;
            background: rgba(212, 165, 116, 0.1);
        }

            .nav-link:hover::after {
                width: 80%;
            }

    /* Sections */
    .section {
        padding: 8rem 4rem;
        min-height: 100vh;
        display: flex;
        align-items: center;
        position: relative;
    }

    .section-content {
        max-width: 1400px;
        margin: 0 auto;
        width: 100%;
    }

    .section-title {
        font-size: 6rem;
        font-weight: 900;
        margin-bottom: 4rem;
        color: #d4a574;
        text-transform: uppercase;
        letter-spacing: 4px;
        text-shadow: 0 0 30px rgba(212, 165, 116, 0.5);
        position: relative;
        display: inline-block;
    }

        .section-title::after {
            content: '';
            position: absolute;
            bottom: -10px;
            left: 0;
            width: 100px;
            height: 4px;
            background: linear-gradient(90deg, #d4a574, transparent);
        }

    .work-section {
        background: linear-gradient(180deg, #0a0a0a 0%, #1a1a1a 100%);
    }

    .work-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(380px, 1fr));
        gap: 2.5rem;
    }

    .work-card {
        background: linear-gradient(135deg, #1a1a1a 0%, #2c2c2c 100%);
        border: 1px solid rgba(212, 165, 116, 0.2);
        color: #fff;
        transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
        box-shadow: 0 4px 20px rgba(0,0,0,0.5);
    }

        .work-card:hover {
            transform: translateY(-10px);
            border-color: #d4a574;
            box-shadow: 0 8px 40px rgba(212, 165, 116, 0.3);
        }

        .work-card :deep(.k-card-header) {
            background: rgba(212, 165, 116, 0.2) !important;
            border-bottom: 1px solid rgba(212, 165, 116, 0.4) !important;
        }

        .work-card :deep(.k-card-title) {
            color: #d4a574 !important;
            font-size: 1.5rem !important;
            font-weight: 700 !important;
        }

        .work-card :deep(.k-card-header) {
            color: #d4a574 !important;
        }

        .work-card :deep(.k-card-header h1),
        .work-card :deep(.k-card-header h2),
        .work-card :deep(.k-card-header h3),
        .work-card :deep(.k-card-header h4),
        .work-card :deep(.k-card-header h5),
        .work-card :deep(.k-card-header h6),
        .work-card :deep(.k-card-header span),
        .work-card :deep(.k-card-header div),
        .work-card :deep(.k-card-header p),
        .work-card :deep(.k-card-header *) {
            color: #d4a574 !important;
        }

        /* Force override for Telerik CardTitle - multiple selectors for maximum compatibility */
        .work-card :deep([class*="card-title"]),
        .work-card :deep([class*="k-card-title"]),
        .work-card :deep([class*="CardTitle"]),
        .work-card :deep(h3),
        .work-card :deep(h4),
        .work-card :deep(h5),
        .work-card :deep(.k-card-title-text),
        .work-card :deep(.k-card-header-text) {
            color: #d4a574 !important;
            text-shadow: 0 1px 2px rgba(0, 0, 0, 0.5);
        }

        /* Global override for any remaining dark text in headers */
        .work-card .k-card-header,
        .work-card [class*="card-header"] {
            color: #d4a574 !important;
        }

